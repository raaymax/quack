{
  "name": "@quack/app",
  "version": "1.0.0",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "npm run dev",
    "build": "npm run build",
    "preview": "npm run preview",
    "types": "npm run types",
    "storybook": "npm run storybook",
    "build-storybook": "npm run build-storybook",
    "chromatic": "npx chromatic",
    "tauri": "npm run tauri"
  },
  "imports": {
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.4",
    "@jsr/planigale__sse": "npm:@jsr/planigale__sse@0.2.8",
    "@sentry/react": "npm:@sentry/react@^9.35.0",
    "@tauri-apps/api": "npm:@tauri-apps/api@^2.4.0",
    "@tauri-apps/plugin-http": "npm:@tauri-apps/plugin-http@^2.4.2",
    "@tauri-apps/plugin-log": "npm:@tauri-apps/plugin-log@^2.3.1",
    "@tauri-apps/plugin-shell": "npm:@tauri-apps/plugin-shell@^2",
    "filesize": "npm:filesize@10.1.6",
    "fuse.js": "npm:fuse.js@7.1.0",
    "mobx": "npm:mobx@6.13.7",
    "mobx-react-lite": "npm:mobx-react-lite@4.1.0",
    "react": "npm:react@19.1.0",
    "react-dom": "npm:react-dom@19.1.0",

    "styled-components": "npm:styled-components@6.1.19",
    "typescript": "npm:typescript@5.8.3",
    "workbox-navigation-preload": "npm:workbox-navigation-preload@7.3.0",
    "workbox-precaching": "npm:workbox-precaching@7.3.0",
    "workbox-routing": "npm:workbox-routing@7.3.0",
    "workbox-strategies": "npm:workbox-strategies@7.3.0",
    "@chromatic-com/storybook": "npm:@chromatic-com/storybook@4.0.1",
    "@storybook/addon-essentials": "npm:@storybook/addon-essentials@8.6.14",
    "@storybook/addon-interactions": "npm:@storybook/addon-interactions@8.6.14",
    "@storybook/addon-onboarding": "npm:@storybook/addon-onboarding@9.0.15",
    "@storybook/addon-themes": "npm:@storybook/addon-themes@9.0.15",
    "@storybook/blocks": "npm:@storybook/blocks@8.6.14",
    "@storybook/react": "npm:@storybook/react@9.0.15",
    "@storybook/react-vite": "npm:@storybook/react-vite@9.0.15",
    "@storybook/test": "npm:@storybook/test@8.6.14",
    "@tauri-apps/cli": "npm:@tauri-apps/cli@^2.4.0",
    "@types/react": "npm:@types/react@^19.0.12",
    "@types/react-dom": "npm:@types/react-dom@^19.0.4",
    "@types/serviceworker": "npm:@types/serviceworker@0.0.140",
    "@types/workbox-sw": "npm:@types/workbox-sw@4.3.7",
    "chromatic": "npm:chromatic@13.1.2",
    "storybook": "npm:storybook@9.0.15",
    "@vitejs/plugin-react": "npm:@vitejs/plugin-react@^4.3.4",
    "vite": "npm:vite@7.0.2",
    "vite-plugin-pwa": "npm:vite-plugin-pwa@1.0.1"
  },
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "ES2020",
      "DOM",
      "DOM.Iterable",
      "es2017",
      "esnext.asynciterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "..",
    "rootDir": "..",
    "paths": {
      "@quack/encryption": ["./deno/encryption/mod.ts"],
      "@quack/api": ["./deno/api/mod.ts"],
      "@quack/tools": ["./deno/tools/mod.ts"]
    }
  },
  "lint": {
    "exclude": [
      ".vite"
    ],
    "rules": {
      "exclude": [
        "no-window",
        "require-await"
      ]
    }
  }
}
